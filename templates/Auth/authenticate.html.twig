{# templates/Auth/authenticate.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Log in to Vault of Time{% endblock %}

{% block body %}
    <section class="mbr-section mbr-section--relative mbr-section--fixed-size" id="form1-15" data-rv-view="18" style="background-color: rgb(193, 193, 193);">
        <div class="mbr-section__container mbr-section__container--std-padding container" style="padding-top: 140px; padding-bottom: 93px;">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2" data-form-type="formoid">
                            <div class="mbr-header mbr-header--center mbr-header--std-padding">
                                <h2 class="mbr-header__text">CREATE USER</h2>
                            </div>
                            <div data-form-alert="true">
                                <div class="hide" data-form-alert-success="true">Thanks for joining up!</div>
                            </div>
                            <form action="/murder" method="post" data-form-title="Create User">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="login" required="" placeholder="Login" data-form-field="Login">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="password" required="" placeholder="Password" data-form-field="Password">
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" name="confirm" required="" placeholder="Confirm" data-form-field="Confirm">
                                </div>
                                <div class="mbr-buttons mbr-buttons--right"><button type="submit" class="mbr-buttons__btn btn btn-lg btn-danger">CREATE</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}